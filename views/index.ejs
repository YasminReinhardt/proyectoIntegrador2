	<!-- como no tiene los atributos html, me ocpo d traer los partials que me trae las etieuqtas de ejs y le pasamos la ruta donde esta el arhcivo -->
<%- include('./partials/head.ejs') %>
<%- include('./partials/header.ejs') %>
<main>


	<!-- Banner -->
	<div class="banner">
		<img src="/images/" alt="">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for (let i=0; i<productos.length; i++) {%>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
				<!-- la ruta ahora tiene el id -->
					<a href="/productos/detail/ <%- productos[i].id %>">
						<figure class="product-box_image">
							<img src="<%= productos[i].img_url%>" alt="">
						</figure>
						<article class="product-box_data">
							<h2><%= productos[i].nombre %></h2>
							<p><%= productos[i].descripcion %> </p>

						</article>
					</a>
				<!-- Aparece el nombre del usuario del producto -->
					<a href="/users/profile <%- productos[i].usuario_id %>">
					<p> <%= productos[i].usuarios.usuario%></p>
				</a>
				</section>
			</div>
			<% } %>
		</div>
	</div>
			
	<!-- /Novedades -->
