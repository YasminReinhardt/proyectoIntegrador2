
<%- include('./partials/head.ejs') %>
<%- include('./partials/header.ejs') %>


	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<!-- <div class="img-container offset-3 col-2">
				<img src=" alt="foto de perfil" class="foto-perfil">
			</div> -->
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"><%=user.usuario%>	
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<li><%= user.email %></li>
						<li><%= user.productos.length%> productos</li>
						<li>200 seguidores</li>
						<li>Comentarios</li>
					</ul>
				</div>
	
			</div>
		</div>
	</section>
	<!-- Borrar cuenta -->
	<form action="/users/delete/" method="POST">
		<input type="submit" name="" value="BORRAR CUENTA">
	</form>

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->
			<% for (let i=0; i < user.productos.length; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/productos/detail/<%- user.productos[i].id %>">
							<figure class="product-box_image">
								<img src="<%=user.productos[i].img_url%>" alt="imagen producto">
							</figure>
							<article class="product-box_data">
								<h2><%=user.productos[i].nombre%></h2>
								<p><%=user.productos[i].descripcion%></p>
								<p>Comentarios: <%= user.productos[i].comentarios.length %></p>
								</article>
						</a>
					</section>
				</div>
			<% } %>
			



<%- include('./partials/footer.ejs') %>
